%b=link_to 'Submit new idea', new_idea_path
%br
%br
.compact-table
  %table
    %tr
      %th{:class=>'column-integer'}
      %th{:class=>'column-integer'}="â–²"
      %th{:class=>'column-string'}="Ideas"
      %th{:class=>'column-integer'}="Comments"
      %th{:class=>'column-string', :width=>"15%"}="Last activity"
    - @ideas.each do |idea|
      %tr
        %td=link_to "X", scratch_idea_path(idea), :method => :put, :class => 'idea-scratch'
        %td{:style=>"text-align: center"}
          %b
            =idea.endorsements.count
        %td{:style=>"text-align: left"}
          - if idea.scratched
            %strike=link_to idea.title, idea, :class => 'idea-index-link'
          -else
            =link_to idea.title, idea, :class => 'idea-index-link'
        %td{:style=>"text-align: center"}
          %b
            =idea.comments.count
        %td{:style=>"text-align: left"}=time_ago_in_words(idea.updated_at) + " ago"

