=form_for(@post) do |f|
  -if @post.errors.any?
    #error_explanation
      %h2=pluralize(@post.errors.count, "error") + "prohibited this post from being saved:"

      %ul
        -@post.errors.full_messages.each do |msg|
          %li= msg

  =f.text_field :title
  %br
  %br
  =f.text_area :body
  .actions
    =f.submit
