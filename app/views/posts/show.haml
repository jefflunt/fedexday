%p{:id=>"notice"}=notice

%h1=@post.title
%br
=@post.body

%br
%br
=link_to('Edit', edit_post_path(@post)) + " |"
=link_to 'Back', posts_path
%br
%br
%h2="Comments (" + @post.comments.count.to_s + ")"
=render 'comment_form'
%br
%br
%table{:width=>"300px"}
  -@post.comments.each do |c|
    %tr
      %td
        %b=time_ago_in_words(c.updated_at) + " ago"
    %tr
      %td
        =c.body
